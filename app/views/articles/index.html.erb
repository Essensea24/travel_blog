<h1>Listing articles</h1>
 
<table>
  <tr>
    <th>Title</th>
    <th>Text</th>
  </tr>
 
  <% @article.each do |a| %>
    <tr>
      <td><%= a.title %></td>
      <td><%= a.text %></td>
      <td><%= link_to "Show", article_path(a.id) %>
      	<%= link_to "Edit this post", edit_article_path(a.id) %>
      	<%= link_to "Delete this post!", article_path(a.id), method: :delete, data: { confirm: "Are you sure you want to delete this country?"} %>
      </td>
    </tr>
  <% end %>

</table>
